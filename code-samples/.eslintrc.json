{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2023
  },
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "globals": {
    "globalThis": false
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": 0,
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" } ],
    "no-undef": ["warn"],
    "no-proto": ["error"],
    "prefer-arrow-callback": ["warn"],
    "prefer-spread": ["warn"]
  },
  "overrides": [
    {
      "files": [
        "script-on-click-without-background/action_popup.js"
      ],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
